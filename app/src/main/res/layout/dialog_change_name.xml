<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Dialog_ChangeName_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change user name"
        android:textColor="@color/black"
        android:fontFamily="@font/lato"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/Dialog_ChangeName_NewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/Dialog_ChangeName_Title"
        app:layout_constraintEnd_toEndOf="@id/Dialog_ChangeName_Title"
        app:layout_constraintTop_toBottomOf="@id/Dialog_ChangeName_Title"/>

    <Button
        android:id="@+id/Dialog_ChangeName_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/change_name"
        android:layout_margin="20dp"
        android:backgroundTint="@color/dark_pink"
        app:layout_constraintEnd_toEndOf="@id/Dialog_ChangeName_NewName"
        app:layout_constraintStart_toStartOf="@id/Dialog_ChangeName_NewName"
        app:layout_constraintTop_toBottomOf="@id/Dialog_ChangeName_NewName"/>
</androidx.constraintlayout.widget.ConstraintLayout>