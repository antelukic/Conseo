<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.lukic.conseo.loginregister.viewmodels.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".loginregister.ui.SetProfilePicture">


        <TextView
            android:id="@+id/Fragment_SetProfilePicture_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="@string/select_your_profile_picture"
            android:textAlignment="center"
            android:textColor="@color/dark_pink"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Fragment_SetProfilePicture_Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="serif"
            android:text="@string/set_profile_picture_subtitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fragment_SetProfilePicture_Title" />

        <Button
            android:id="@+id/Fragment_SetProfilePicture_Gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/light_yellow"
            android:text="@string/choose_from_gallery"
            android:textAllCaps="false"
            android:textColor="@color/dark_pink"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/Fragment_SetProfilePicture_Subtitle"
            app:layout_constraintStart_toStartOf="@id/Fragment_SetProfilePicture_Subtitle"
            app:layout_constraintTop_toBottomOf="@id/Fragment_SetProfilePicture_Subtitle" />

        <Button
            android:id="@+id/Fragment_SetProfilePicture_Camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/light_yellow"
            android:text="@string/take_a_photo"
            android:textAllCaps="false"
            android:textColor="@color/dark_pink"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/Fragment_SetProfilePicture_Gallery"
            app:layout_constraintStart_toStartOf="@+id/Fragment_SetProfilePicture_Gallery"
            app:layout_constraintTop_toBottomOf="@+id/Fragment_SetProfilePicture_Gallery" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Fragment_SetProfilePicture_Picture"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/baseline_perm_identity_24"
            app:layout_constraintEnd_toEndOf="@+id/Fragment_SetProfilePicture_Camera"
            app:layout_constraintStart_toStartOf="@+id/Fragment_SetProfilePicture_Camera"
            app:layout_constraintTop_toBottomOf="@+id/Fragment_SetProfilePicture_Camera" />

        <Button
            android:id="@+id/Fragment_SetProfilePicture_Proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/lato"
            android:text="@string/proceed"
            android:textColor="@color/dark_pink"
            android:backgroundTint="@color/white"
            android:elevation="20dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/Fragment_SetProfilePicture_Skip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Fragment_SetProfilePicture_Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/lato"
            android:text="@string/skip"
            android:textColor="@color/dark_pink"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
