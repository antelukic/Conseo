<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.lukic.conseo.places.viewmodels.AddPlaceViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".places.ui.AddPlaceFragment">


            <ScrollView
                android:id="@+id/Fragment_AddPlace_ScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Fragment_AddPlace_Image"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_perm_identity_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Fragment_AddPlace_GalleryButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_from_gallery"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/dark_pink"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:textSize="12sp"/>

                        <Button
                            android:id="@+id/Fragment_AddPlace_CameraButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/take_a_photo"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/dark_pink"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:textSize="12sp"/>

                    </LinearLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/Fragment_Register_Title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:backgroundTint="@color/light_grey"
                            android:hint="@string/enter_name"
                            android:text="@={viewModel.name}"
                            app:hintTextColor="@color/dark_pink" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/lato"
                        android:text="@string/add_additional_info"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/Fragment_AddPlace_Info"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        android:layout_margin="10dp"
                        android:layout_weight="10"
                        android:gravity="top"
                        android:background="@color/light_grey"
                        android:backgroundTint="@color/light_grey"
                        android:inputType="textMultiLine"
                        android:text="@={viewModel.additionalInfo}" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/lato"
                            android:text="Choose type"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/Fragment_AddPlace_Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:selectedItemPosition="@={viewModel.selectedItemPosition}"
                            android:spinnerMode="dropdown" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/Fragment_AddPlace_DateTimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/lato"
                        android:text="Please choose date and time"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:visibility="@{viewModel.selectedItemPosition ==2? View.VISIBLE: View.GONE}" />

                    <DatePicker
                        android:id="@+id/Fragment_AddPlace_DatePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner"
                        android:day="@={viewModel.day}"
                        android:month="@={viewModel.month}"
                        android:visibility="@{viewModel.selectedItemPosition == 2? View.VISIBLE: View.GONE}"
                        android:year="@={viewModel.year}" />

                    <TimePicker
                        android:id="@+id/Fragment_AddPlace_TimePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:hour="@={viewModel.hour}"
                        android:minute="@={viewModel.minute}"
                        android:timePickerMode="spinner"
                        android:visibility="@{viewModel.selectedItemPosition == 2? View.VISIBLE: View.GONE}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_location"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:layout_margin="10dp"/>

                    <EditText
                        android:id="@+id/Fragment_AddPlace_Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@={viewModel.location}"
                        android:paddingLeft="10dp"
                        android:background="@color/light_grey"
                        android:layout_margin="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm_your_location_on_map_if_the_wrong_location_is_shown_search_for_the_right_one"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:layout_margin="10dp"/>


                    <Button
                        android:id="@+id/Fragment_AddPlace_LookOnMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:text="@string/look_on_map"
                        android:textSize="16sp"
                        android:backgroundTint="@color/dark_pink"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/lato"
                        android:layout_margin="20dp"/>


                    <Button
                        android:id="@+id/Fragment_AddPlace_AddButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:minHeight="50dp"
                        android:backgroundTint="@color/dark_pink"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:text="@string/add" />

                </LinearLayout>
            </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
