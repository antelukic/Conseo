<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.lukic.conseo.ui.fragment.MapsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.MapsFragment">

        <fragment
            android:id="@+id/Fragment_Maps_Map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            map:uiZoomControls="true"
            map:uiRotateGestures="true"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/Fragment_Maps_Search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:minHeight="50dp"
            android:alpha="0.8"
            android:background="@color/white"
            android:singleLine="true"
            android:hint="@string/search_for_a_location"
            android:paddingRight="30dp"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent"/>


        <ImageView
            android:id="@+id/Fragment_Maps_SearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_24"
            android:layout_marginEnd="10dp"
            map:layout_constraintBottom_toBottomOf="@+id/Fragment_Maps_Search"
            map:layout_constraintEnd_toEndOf="@+id/Fragment_Maps_Search"
            map:layout_constraintTop_toTopOf="@+id/Fragment_Maps_Search" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
