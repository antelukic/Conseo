<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/cormorant_light</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLowerCaseLetters" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/cormorant_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardViewTopBorder" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_top_card_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_top_card_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
    </style>
</resources>