<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/places"
    app:startDestination="@id/placesFragment">

    <fragment
        android:id="@+id/placesFragment"
        android:name="com.lukic.conseo.places.ui.PlacesFragment"
        tools:layout="@layout/fragment_places"
        android:label="PlacesFragment" >

        <action
            android:id="@+id/action_servicesFragment_to_addServiceFragment"
            app:destination="@id/addPlaceFragment"
            app:enterAnim="@anim/right_to_left"
            app:popEnterAnim="@anim/right_to_left" />
        <action
            android:id="@+id/action_placesFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment"
            app:enterAnim="@anim/right_to_left"
            app:popEnterAnim="@anim/right_to_left" />
    </fragment>
    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.lukic.conseo.places.ui.AddPlaceFragment"
        android:label="AddServiceFragment"
        tools:layout="@layout/fragment_add_place">
        <action
            android:id="@+id/action_addServiceFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:enterAnim="@anim/right_to_left"
            app:popEnterAnim="@anim/right_to_left" />
        <action
            android:id="@+id/action_addServiceFragment_to_servicesFragment"
            app:destination="@id/placesFragment"
            app:enterAnim="@anim/left_to_right"
            app:popEnterAnim="@anim/left_to_right" />
        <argument
            android:name="location"
            app:argType="string"
            android:defaultValue='' />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.lukic.conseo.places.ui.MapsFragment"
        android:label="MapsFragment"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="location"
            app:argType="string"/>
        <action
            android:id="@+id/action_mapsFragment_to_addServiceFragment"
            app:destination="@id/addPlaceFragment"
            app:enterAnim="@anim/right_to_left"
            app:popEnterAnim="@anim/right_to_left" />
        <argument
            android:name="fromFragment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.lukic.conseo.chat.ui.MessageFragment"
        android:label="MessageFragment"
        tools:layout="@layout/fragment_message">
        <argument
            android:name="receiverID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.lukic.conseo.places.ui.PlaceDetailsFragment"
        android:label="fragment_place_details"
        tools:layout="@layout/fragment_place_details" >
        <action
            android:id="@+id/action_placeDetailsFragment_to_placesFragment"
            app:destination="@id/placesFragment"
            app:enterAnim="@anim/left_to_right"
            app:popEnterAnim="@anim/left_to_right" />
        <action
            android:id="@+id/action_placeDetailsFragment_to_messageFragment"
            app:destination="@id/messageFragment"
            app:enterAnim="@anim/right_to_left"
            app:popEnterAnim="@anim/right_to_left" />
        <action
            android:id="@+id/action_placeDetailsFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:enterAnim="@anim/left_to_right"
            app:popEnterAnim="@anim/left_to_right" />
        <argument
            android:name="serviceID"
            app:argType="string" />
        <argument
            android:name="serviceType"
            app:argType="string" />

        <deepLink android:id="@+id/deepLinkToPlaceDetails" app:uri="conseo://com.lukic.conseo/place-details/{serviceID}/{serviceType}"/>
    </fragment>


</navigation>